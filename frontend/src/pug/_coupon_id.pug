- var data = htmlWebpackPlugin.options.data;
.coupon
  .card
    .card_header
      h2.card_header_text
        | \#{storeName}
      .card_header_icon
        .icon.icon-fav.checkableIcon
          input#js-fav.checkableIcon-check.js-fav(type="checkbox" data-coupon-id="\#{couponKey}")
          label.checkableIcon-icon(for="js-fav")

    .annotatedImageGroup
      img.annotatedImageGroup-image(
        src="\#{imageUrl}"
        alt="\#{storeName}"
      )
      span.annotatedImageGroup-annotation 画像は一例です
    .card_body
      .card_body_title
        | \#{couponTitle}

      .card_body_summary.highlightedBlock
        | %{ case couponType }
        | %{ of CouponTypeDiscount }
        span.highlightedBlock-sub \#{discountPercent}
        span.highlightedBlock-main \#{discountMinimumPrice}

        | %{ of CouponTypeGift }
        span.highlightedBlock-sub \#{giftContent}
        span.highlightedBlock-main \#{giftMinimumPrice}
        span.highlightedBlock-main \#{giftReferencePrice}

        | %{ of CouponTypeSet }
        span.highlightedBlock-sub \#{setContent}
        span.highlightedBlock-main \#{setPrice}
        span.highlightedBlock-main \#{setReferencePrice}

        | %{ of CouponTypeOther }
        span.highlightedBlock-sub \#{otherContent}

        | %{ endcase }


      .card_body_expiration
        span.card_body_expiration-title
          | 有効期限
        span.card_body_expiration-body
          | \#{validFrom}
          | \#{validUntil}
  .annotation ※ この画面を店舗でご提示ください
  .location
    .location_map
      | %{ case maybeStoreAddress }
      | %{ of Just address }
      iframe.location_map-frame(
        frameborder="0"
        allowfullscreen
        src='https://www.google.com/maps/embed/v1/place?key=' + data.googleMapApiKey + '&q=\#{address}'
      )
      | %{ of Nothing }
      | No address is set
      | %{ endcase }
  .aboutStore
    a.btn.outerBtn(href="\#{renderRoute storeR}")
      | \#{storeName}
  .moreContents
    | %{ case couponType }
    | %{ of CouponTypeDiscount }
    |     %{ forall condition <- discountOtherConditions }
    p.moreContents_txt \#{condition}
    |     %{ endforall }

    | %{ of CouponTypeGift }
    |     %{ forall condition <- giftOtherConditions }
    p.moreContents_txt \#{condition}
    |     %{ endforall }

    | %{ of CouponTypeSet }
    |     %{ forall condition <- setOtherConditions }
    p.moreContents_txt \#{condition}
    |     %{ endforall }

    | %{ of CouponTypeOther }
    |     %{ forall condition <- otherConditions }
    p.moreContents_txt \#{condition}
    |     %{ endforall }
    | %{ endcase }
