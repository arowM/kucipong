include ../common/_layout
  body#main.wrapper
    include _header
      | 店舗ユーザ追加
    include ../common/_messageArea
    .admin
      .adminBody
        .signboard_titleArea
          .signboard_titleArea-title
            | 店舗ユーザの作成
        form.signboard_body(
          method="POST"
          action="\#{renderRoute adminStoreCreateR}"
        )
          .labeledRow
            label.labeledRow-header(for="storeEmail")
              | 追加する店舗ユーザのメールアドレス
            .labeledRow-body
              input#storeEmail(
                name="\#{toName CreateStoreEmail}" type="email"
                required
              )
          .submitRow
            button.btn.outerBtn(type="submit")
              | この内容で店舗ユーザを作成
